<!--検索機能 -->
<% if user_signed_in? %>
  <div class="search_form">
    検索
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <%= f.text_field :name %>
      <%= f.select :range, options_for_select([['ジャンル', 'Genre'], ['食材', 'Ingredient']]) %>
      <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["部分一致","partial_match"], ["前方一致","forward_match"], ["後方一致","backward_match"]]) %>
      <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
  </div>
<!--賞味期限、購入日　検索機能 --> 
  <div class="search_form">
    日付け検索
    <%= form_with url: search_by_date_path, local: true, method: :get do |f| %>
      <%= f.select :method, [["賞味期限", "expiration"], ["購入日", "purchase"]] %>
      <%= f.select :date, (0..7).map{|day| [day == 0 ? "本日" : "#{day}日前", day]} %>
  　　<%= f.submit '検索', class: 'btn btn-primary'  %>
　　<% end %>
  </div>
<% end %>