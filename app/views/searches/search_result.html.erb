<h2>検索結果</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがGenreの時 -->
  <% if @range == "Genre" %>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがGenreではない時(= 検索対象モデルがIngredientの時) -->
    <tbody>
      <% @ingredients.each do |ingredient| %>
        <tr>
         <td><%= ingredient.name %></td>
         <td><%= ingredient.purchase_date %></td>
         <td><%= ingredient.expiration_date %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>