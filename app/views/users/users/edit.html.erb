<div class="my-4">
<h2>ユーザー情報編集</h2>
  <%= render 'layouts/errors', errors: @user %>
  <%= form_with model: @user, url: update_user_path ,method: :patch do |f| %>

     <div class="row field my-3 ml-3">
        <%= f.label :"氏名" %> <font color="red">*必須</font>
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
     </div>
     <div class="row field my-3 ml-3">
        <%= f.label :"フリガナ" %> <font color="red">*必須</font>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
     </div>
     <div class="row field my-3 ml-3"> 
        <%= f.label :"メールアドレス" %> <font color="red">*必須</font>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
     </div>
     <div class="my-4"><%= f.submit "編集内容を保存する", class: "btn btn-success" %></div>
<% end %>
</div>

