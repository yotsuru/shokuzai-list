
<h2>ユーザー情報編集</h2>
      
  
 <%= form_with model: @user, url: update_user_path ,method: :patch do |f| %>

     <div class="row field">
        <%= f.label :"氏名" %>
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
     </div>
     <div class="row field"> 
        <%= f.label :"フリガナ" %>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
     </div>
     <div class="row field"> 
        <%= f.label :"メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
     </div>

          <%= f.submit "編集内容を保存する", class: "btn btn-success" %>
<% end %>

