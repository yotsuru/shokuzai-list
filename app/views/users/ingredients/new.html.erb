<h1>Users::Ingredients#new</h1>
<%= form_with model: @ingredient, url: ingredients_path, method: :post do |f| %>
    <div class="form-group">
        <%= f.label :genre_id %>
        <%= f.collection_select(:genre_id, Genre.all, :id, :name) %>
    </div>
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>
    <div class="form-group">
        <%= f.label :expiration_date %>
        <%= f.date_field :expiration_date %>
    </div>
    <div class="form-group">
        <%= f.label :purchase_date %>
        <%= f.date_field :purchase_date %>
    </div>
    <div class="form-group">
        <%= f.label :quantity %>
        <%= f.number_field :quantity, step: 0.1 %>
    </div>
    <div class="form-group">
        <%= f.label :unit %>
        <%= f.text_field :unit %>
    </div>
    
    <div class="form-group">
        <%= f.submit "登録" %>
    </div>
    
<% end %>
