<h2>食材　登録</h2>
<%= render 'layouts/errors', errors: @ingredient %>

<%= form_with model: @ingredient, url: ingredients_path, method: :post do |f| %>
    <div class="form-group">
        <%= f.label :ジャンル %><font color="red">*必須</font>
        <%= f.collection_select(:genre_id, current_user.genres, :id, :name, include_blank: "なし") %>
    </div>
    <div class="form-group">
        <%= f.label :食材 %><font color="red">*必須</font>
        <%= f.text_field :name %>
    </div>
    <div class="form-group">
        <%= f.label :購入日 %>
        <%= f.date_field :purchase_date %>
    </div>
    <div class="form-group">
        <%= f.label :賞味期限 %>
        <%= f.date_field :expiration_date %>
    </div>
    <div class="form-group">
        <%= f.label :数量 %><font color="red">*必須</font>
        <%= f.number_field :quantity, step: 0.1 %>
    </div>
    <div class="form-group">
        <%= f.label :単位 %>
        <%= f.text_field :unit %>
    </div>
    
    <div class="form-group">
        <%= f.submit "登録" %>
    </div>
    
<% end %>
