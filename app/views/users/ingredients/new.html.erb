<h1>食財　登録</h1>
<%= form_with model: @ingredient, url: ingredients_path, method: :post do |f| %>
    <div class="form-group">
        <%= f.label :ジャンル %>
        <%= f.collection_select(:genre_id, Genre.all, :id, :name, include_blank: "選択して下さい") %>
    </div>
    <div class="form-group">
        <%= f.label :食材 %>
        <%= f.text_field :name %>
    </div>
    <div class="form-group">
        <%= f.label :購入日 %>
        <%= f.date_field :purchase_date %>
    </div>
    <div class="form-group">
        <%= f.label :賞味期限 %>
        <%= f.date_field :expiration_date %>
    </div>
    <div class="form-group">
        <%= f.label :数量 %>
        <%= f.number_field :quantity, step: 0.1 %>
    </div>
    <div class="form-group">
        <%= f.label :単位 %>
        <%= f.text_field :unit %>
    </div>
    
    <div class="form-group">
        <%= f.submit "登録" %>
    </div>
    
<% end %>
